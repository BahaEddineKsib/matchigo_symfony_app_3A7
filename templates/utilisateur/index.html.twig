{% extends 'base.html.twig' %}






{% block body %}
<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">

                <h1>Utilisateur index</h1>
                <div class="form-group">
                    <input class="form-control" type="text" id="search-user" placeholder="chercher un utilisateur">

                </div>
                <div style="margin-top: 20px">

<div id="result-search">

</div>
                </div>

                <table class="table">
                    <thead>
                    <tr>

                        <th>Nom</th>
                        <th>Prenom</th>
                        <th>DateNaissance</th>
                        <th>Adresse</th>
                        <th>NumTel</th>
                        <th>Email</th>

                        <th>Type</th>

                        <th>show</th>
                        <th>edit</th>
                        <th>delete</th>


                    </tr>
                    </thead>
                    <tbody>
                    {% for utilisateur in utilisateurs %}
                        <tr>

                            <td>{{ utilisateur.nom }}</td>
                            <td>{{ utilisateur.prenom }}</td>
                            <td>{{ utilisateur.dateNaissance ? utilisateur.dateNaissance|date('Y-m-d') : '' }}</td>
                            <td>{{ utilisateur.adresse }}</td>
                            <td>{{ utilisateur.numTel }}</td>
                            <td>{{ utilisateur.email }}</td>

                            <td>{{ utilisateur.type }}</td>

                            <td>
                                <a href="{{ path('app_utilisateur_edit', {'id': utilisateur.id}) }}">show</a>


                            </td>
                            <td>
                                <a href="{{ path('app_utilisateur_edit', {'id': utilisateur.id}) }}">edit</a>


                            </td>
                            <td>
                                {{ include('utilisateur/_delete_form.html.twig') }}


                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="12">no records found</td>
                        </tr>
                    {% endfor %}

                    </tbody>
                </table>

                <a href="{{ path('app_commentaire_new') }}">Comment</a>
            </div>
                <!-- partial -->
            </div>
            <!-- main-panel ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>

{% endblock %}


